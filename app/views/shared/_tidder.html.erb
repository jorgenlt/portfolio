<!-- Modal -->
<div class="modal fade" id="tidderModal" tabindex="-1" aria-labelledby="tidderModalLabel" aria-hidden="true">
  <div class="modal-dialog modal-fullscreen modal-dialog-centered modal-dialog-scrollable">
    <div class="modal-content">
      <div class="modal-header">
        <h1 class="modal-title fs-2" id="tidderModalLabel">tidder</h1>
        <span data-bs-dismiss="modal" aria-label="Close"><i class="fa-solid fa-xmark hover-brighter-green"></i></span>
      </div>
      <div class="modal-body modal-template tidder-modal-body">
        <div>
          <p>A responsive reddit clone web application.</p>
          <p>
          Visit site:
          <%= link_to 'tidder.eu', 'http://www.tidder.eu', target: "_blank"  %>
          </p>
          <div class="tidder-features">
            <p>Features:</p>
            <ul>
              <div>
                <i class="fa-solid fa-circle-arrow-right"></i>
                <li>Web application built with the <%= link_to 'Ruby on Rails', 'https://rubyonrails.org/', target: '_blank' %> framework.</li>
              </div>
              <div>
                <i class="fa-solid fa-circle-arrow-right"></i>
                <li>Sign up, sign in.</li>
              </div>
              <div>
                <i class="fa-solid fa-circle-arrow-right"></i>
                <li>Create a profile and add a profile picture.</li>
              </div>
              <div>
                <i class="fa-solid fa-circle-arrow-right"></i>
                <li>Create a new post.</li>
              </div>
              <div>
                <i class="fa-solid fa-circle-arrow-right"></i>
                <li>Upvote or downvote a post.</li>
              </div>
              <div>
                <i class="fa-solid fa-circle-arrow-right"></i>
                <li>Add a new comment to a post.</li>
              </div>
              <div>
                <i class="fa-solid fa-circle-arrow-right"></i>
                <li>Upvote or downvote a comment.</li>
              </div>
              <div>
                <i class="fa-solid fa-circle-arrow-right"></i>
                <li>Search for a post.</li>
              </div>
              <div>
                <i class="fa-solid fa-circle-arrow-right"></i>
                <li>Save a post.</li>
              </div>
              <div>
                <i class="fa-solid fa-circle-arrow-right"></i>
                <li>Share a post.</li>
              </div>
            </ul>
          </div>
        </div>
        <div>
          <%= image_tag 'tidder_phone_1.png', height: "700", alt: "Tidder on phone." %>
        </div>
      </div>
      <%# <div class="modal-footer">
      </div> %>
    </div>
  </div>
</div>
