<!-- Modal -->
<div class="modal fade" id="tidderModal" tabindex="-1" aria-labelledby="tidderModalLabel" aria-hidden="true">
  <div class="modal-dialog modal-fullscreen modal-dialog-centered modal-dialog-scrollable">
    <div class="modal-content">
      <div class="modal-header">
        <h1 class="modal-title fs-5" id="tidderModalLabel">Tidder</h1>
        <span data-bs-dismiss="modal" aria-label="Close"><i class="fa-solid fa-xmark hover-brighter-green"></i></span>
      </div>
      <div class="modal-body modal-template tidder-modal-body">
        <div>
          <p>A reddit clone.</p>
          <p>
          Visit site:
          <%= link_to 'tidder.eu', 'http://www.tidder.eu', target: "_blank"  %>

          </p>
          <div>
            <p>Features:</p>
            <ul>
              <li><i class="fa-solid fa-check"></i> Sign in or sign up.</li>
              <li><i class="fa-solid fa-check"></i> Create a profile and add a profile picture.</li>
              <li><i class="fa-solid fa-check"></i> Create a new post.</li>
              <li><i class="fa-solid fa-check"></i> Upvote or downvote a post.</li>
              <li><i class="fa-solid fa-check"></i> Add a new comment to post.</li>
              <li><i class="fa-solid fa-check"></i> Upvote or downvote a comment.</li>
              <li><i class="fa-solid fa-check"></i> Search for a post.</li>
              <li><i class="fa-solid fa-check"></i> Save a post.</li>
              <li><i class="fa-solid fa-check"></i> Share a post.</li>
              <li></li>
            </ul>
          </div>
        </div>
        <div>
          <%= image_tag 'tidder_phone_1.png', height: "700", alt: "Tidder on phone." %>
        </div>
      </div>
      <%# <div class="modal-footer">
      </div> %>
    </div>
  </div>
</div>
