<!-- Modal -->
<div class="modal fade" id="currencyconverterModal" tabindex="-1" aria-labelledby="currencyconverterModalLabel" aria-hidden="true">
  <div class="modal-dialog modal-xl modal-fullscreen-lg-down modal-dialog-centered modal-dialog-scrollable">
    <div class="modal-content">
      <div class="modal-header">
        <h1 class="modal-title fs-2" id="currencyconverterModalLabel">Currency Converter</h1>
        <span data-bs-dismiss="modal" aria-label="Close"><i class="fa-solid fa-xmark hover-brighter-green"></i></span>
      </div>
      <div class="modal-body modal-template currencyconverter-modal-body">
        <div class="currencyconverter-description">
          <div class="currencyconverter-text">
            <p>A lightweight currency converter using API from <%= link_to 'exchangerate-api.com', 'https://www.exchangerate-api.com/', target: "_blank" %>.</p>
            <p>
            Visit site:
            <%= link_to 'Currency Converter', currency_converter_path, target: "_blank"  %>
            </p>
            <div class="currencyconverter-features">
              <p>Features:</p>
              <ul>
                <div>
                  <i class="fa-solid fa-circle-arrow-right"></i>
                  <li>Currency converter</li>
                </div>
              </ul>
            </div>
            <%= image_tag 'currency_converter_cropped.png', alt: "Currency Converter web application", class: "currencyconverter-img" %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
