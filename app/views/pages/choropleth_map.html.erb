
<script src="https://d3js.org/d3.v7.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/topojson/3.0.2/topojson.min.js" integrity="sha512-4UKI/XKm3xrvJ6pZS5oTRvIQGIzZFoXR71rRBb1y2N+PbwAsKa5tPl2J6WvbEvwN3TxQCm8hMzsl/pO+82iRlg==" crossorigin="anonymous" referrerpolicy="no-referrer"></script>

<div id="choropleth-map">
    <h1 id="title">United States Educational Attainment</h1>
    <h3 id="description">Percentage of adults age 25 and older with a bachelor's degree or higher (2010-2014)</h3>
    <div id='tooltip'></div>
    <svg id='canvas'></svg>
    <svg id='legend'>
        <g>
            <rect x="10" y="0" width="30" height="30" fill="darkred"></rect>
            <text x="60" y="20" fill="white">Less than 15%</text>
        </g>
        <g>
            <rect x="10" y="40" width="30" height="30" fill="orange"></rect>
            <text x="60" y="60" fill="white">15 - 30%</text>
        </g>
        <g>
            <rect x="10" y="80" width="30" height="30" fill="lightgreen"></rect>
            <text x="60" y="100" fill="white">30 - 45%</text>
        </g>
        <g>
            <rect x="10" y="120" width="30" height="30" fill="darkgreen"></rect>
            <text x="60" y="140" fill="white">Over 45%</text>
        </g>
    </svg>
</div>

